<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>addRealCustomer</servlet-name>
        <servlet-class>presentation.RealCustomerRegistrarServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>addLegalCustomer</servlet-name>
        <servlet-class>presentation.LegalCustomerRegistrarServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>updateLegalCustomer</servlet-name>
        <servlet-class>presentation.LegalCustomerUpdaterServlet</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>updateRealCustomer</servlet-name>
        <servlet-class>presentation.RealCustomerUpdaterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>selectRealCustomer</servlet-name>
        <servlet-class>presentation.RealCustomerSelectorServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>deleteLegalCustomer</servlet-name>
        <servlet-class>presentation.LegalCustomerRemoverServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>selectLegalCustomer</servlet-name>
        <servlet-class>presentation.LegalCustomerSelectorServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>deleteRealCustomer</servlet-name>
        <servlet-class>presentation.RealCustomerRemoverServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>updateLegalCustomer</servlet-name>
        <url-pattern>/updateLegalCustomer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>updateRealCustomer</servlet-name>
        <url-pattern>/updateRealCustomer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>selectLegalCustomer</servlet-name>
        <url-pattern>/selectLegalCustomer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>selectRealCustomer</servlet-name>
        <url-pattern>/selectRealCustomer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>deleteRealCustomer</servlet-name>
        <url-pattern>/deleteRealCustomer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>deleteLegalCustomer</servlet-name>
        <url-pattern>/deleteLegalCustomer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>addRealCustomer</servlet-name>
        <url-pattern>/addRealCustomer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>addLegalCustomer</servlet-name>
        <url-pattern>/addLegalCustomer</url-pattern>
    </servlet-mapping>

</web-app>
